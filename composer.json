{
    "name": "dniccum/secret-stash-cli",
    "description": "A PHP-based Composer package to interact with the SecretStash environment variable service.",
    "keywords": [
        "secret-stash",
        "dniccum",
        "environment",
        "variables",
        "laravel",
        "secret-stash-cli"
    ],
    "homepage": "https://github.com/dniccum/secret-stash-cli",
    "license": "MIT",
    "authors": [
        {
            "name": "Doug Niccum",
            "email": "doug@dniccumdesign.com",
            "role": "Owner"
        }
    ],
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.10",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/contracts": "^11.0||^12.0",
        "laravel/prompts": "^0.3.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/boost": "^2.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Dniccum\\SecretStash\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dniccum\\SecretStash\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dniccum\\SecretStash\\SecretStashServiceProvider"
            ],
            "aliases": {
                "SecretStash": "Dniccum\\SecretStash\\Facades\\SecretStash"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
